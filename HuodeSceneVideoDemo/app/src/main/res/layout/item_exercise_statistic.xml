<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_question"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:text="第1题"
        android:textColor="@color/confirm_color"
        android:textSize="15sp" />

    <RelativeLayout
        android:id="@+id/rl_statistic_right"
        android:layout_width="345dp"
        android:layout_height="30dp">

        <ProgressBar
            android:id="@+id/pb_statistic_right"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:indeterminate="false"
            android:indeterminateOnly="false"
            android:max="100"
            android:progressDrawable="@drawable/statistic_right_progressbar" />

        <ImageView
            android:id="@+id/iv_statistic_right"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="2.5dp"
            android:src="@mipmap/iv_statistic_right" />

        <TextView
            android:id="@+id/tv_right_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/iv_statistic_right"
            android:text="1%"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_statistic_error"
        android:layout_width="345dp"
        android:layout_height="30dp"
        android:visibility="gone">

        <ProgressBar
            android:id="@+id/pb_statistic_error"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:indeterminate="false"
            android:indeterminateOnly="false"
            android:max="100"
            android:progressDrawable="@drawable/statistic_error_progressbar" />

        <ImageView
            android:id="@+id/iv_statistic_error"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="2.5dp"
            android:src="@mipmap/iv_statistic_error" />

        <TextView
            android:id="@+id/tv_error_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/iv_statistic_error"
            android:text="1%"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:textStyle="bold" />

    </RelativeLayout>
</LinearLayout>